.shell powershell

# Reload whkd configuration
alt + o                 : taskkill /f /im whkd.exe; Start-Process whkd -WindowStyle hidden
alt + shift + o         : komorebic reload-configuration
alt + i                 : komorebic toggle-shortcuts

# App shortcuts - these require shell to be pwsh / powershell
# The apps will be focused if open, or launched if not open
#alt + a                 : alacritty --config-file $HOME\.dotfiles\windows\alacritty\alacritty.toml --working-directory $HOME
alt + a : pwsh -NoProfile -Command "Start-Process alacritty"

# Focus windows
alt + h                 : komorebic focus left
alt + j                 : komorebic focus down
alt + k                 : komorebic focus up
alt + l                 : komorebic focus right
alt + z		            	: komorebic toggle-monocle

# Move windows
alt + shift + h         : komorebic move left
alt + shift + j         : komorebic move down
alt + shift + k         : komorebic move up
alt + shift + l         : komorebic move right

# Manipulate windows
alt + q                 : komorebic close

# Window manager options
alt + shift + r         : komorebic retile

# Workspaces
ctrl + alt + l		: komorebic cycle-workspace next
ctrl + alt + h		: komorebic cycle-workspace previous
ctrl + alt + c    : komorebic new-workspace
ctrl + alt + x    : komorebic close; komorebic close; komorebic close; komorebic close; komorebic close-workspace

# Move windows across workspaces
ctrl + alt + shift + l : pwsh -NoProfile -Command "& python '$env:USERPROFILE\.dotfiles\windows\komorebi\move_tile.py' next"
ctrl + alt+ shift + h : pwsh -NoProfile -Command "& python '$env:USERPROFILE\.dotfiles\windows\komorebi\move_tile.py' previous"
