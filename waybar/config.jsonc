    "height": 24,
    "spacing": 4,
    "margin-top": 2,
    "margin-left": 2,
    "margin-right": 2,

    
    "modules-left": [
        "custom/power",
        "river/tags"
    ],
    
    "modules-center": [
        "clock"
    ],
    
    "modules-right": [
        "tray"
    ],

    "custom/power": {
        "format": "ï€‘",
        "tooltip": false,
        "on-click": "wlogout" 
    },

    "river/tags": {
